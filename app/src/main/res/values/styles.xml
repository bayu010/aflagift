<resources>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Fullscreen application theme -->
    <style name="AppTheme.FullScreen" parent="AppTheme.Base">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen theme. -->
<!--    <style name="SplashTheme" parent="AppTheme.NoActionBar">-->
<!--        <item name="android:windowBackground">@drawable/drawable_app_logo</item>-->
<!--    </style>-->

    <style name="AppTheme.Dialog.Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="AppTheme.Dialog">
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.Alert.Title</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.Dialog.Alert.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="NavigationView" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <!--        <item name="android:windowBackground">@color/background_transparent_dialog</item>-->
        <item name="android:windowBackground">@color/background_dashboard</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>

    <style name="CustomDialog.Transparent" parent="CustomDialog">
        <item name="android:windowBackground">@color/background_transparent_dialog</item>
    </style>

</resources>
